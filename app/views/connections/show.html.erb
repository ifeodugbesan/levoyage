<div class="container mt-5 pt-5 position-relative" data-controller="guesses" data-guesses-target="container">
  <%= render "connections/results", attempt: @attempt %>
  <div class="mt-5 pt-5">
    <p class="text-center">Create four groups of four!</p>
    <div id="form" data-guesses-target="formContainer">
      <%= render "connections/form", connection: @connection, attempt: @attempt, solved_groups: @solved_groups, unsolved_groups: @unsolved_groups, remaining_words: @remaining_words %>
    </div>
  </div>
</div>